<VirtualHost *:80>
	ServerAdmin webmaster@{{ ansible_facts['fqdn'] }}
	ServerName {{ ansible_facts['fqdn'] }}
	ErrorLog logs/{{ ansible_facts['hostname'] }}-error.log
	CustomLog logs/{{ansible_facts['hostname'] }}-comm.long common
	DocumentRoot /var/www/vhosts/{{ ansible_facts['hostname'] }}

	<Directory /var/www/html/vhosts/{{ ansible_facts['hostname'] }}>
		Options +Indexes +FollowSymLinks +Includes
		Order allow,deny
		Allow from all	
	</Directory>
</VirtualHost>
